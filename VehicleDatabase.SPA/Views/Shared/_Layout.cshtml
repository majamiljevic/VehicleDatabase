<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Vehicle database</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="//cdn.jsdelivr.net/select2/3.4.5/select2.css" />
    <base href="/">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="#/">VehicleDatabase</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#/manufacturers">Manufacturers</a></li>
                    <li><a href="#/models">Models</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div ng-view>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maja Miljevic</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script src="https://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-2.5.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular-animate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular-touch.js"></script>
    <script src="//cdn.jsdelivr.net/select2/3.4.5/select2.js"></script>
    <script src="https://rawgithub.com/angular-ui/ui-select2/master/src/select2.js"></script>

    @Scripts.Render("~/bundles/app")
    @RenderSection("Scripts", required: false)
</body>
</html>
